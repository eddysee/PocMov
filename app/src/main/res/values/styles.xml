<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorMain</item>
        <item name="colorPrimaryDark">@color/colorText</item>
        <item name="colorAccent">@color/colorAccent</item>
        
        <item name="android:actionMenuTextColor">@color/colorText</item>
        <item name="android:actionMenuTextAppearance">@color/colorMain</item>
        <item name="android:actionBarStyle">@style/CustomActionBar</item>

    </style>
    <style name="CustomActionBar" parent="@android:style/Widget.DropDownItem">
        <item name="android:buttonTint">@color/colorMain</item>
        <item name="android:textColor">@color/colorText</item>


    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>



</resources>
